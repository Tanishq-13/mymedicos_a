<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer shape (rectangle with stroke) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- Transparent fill color -->
            <stroke
                android:width="@dimen/_1sdp"
                android:color="#C1C1C1"/> <!-- Stroke width and color -->
            <corners android:radius="@dimen/_8sdp"/> <!-- Border radius of 5dp -->
        </shape>
    </item>

    <item android:top="@dimen/_5sdp"
        android:right="@dimen/_5sdp"
        android:bottom="@dimen/_5sdp"
        android:left="@dimen/_5sdp">
        <shape android:shape="oval">
            <solid android:color="#00000000"/> <!-- Transparent fill color -->
            <corners android:radius="@dimen/_10ssp" />
        </shape>
    </item>
</layer-list>
