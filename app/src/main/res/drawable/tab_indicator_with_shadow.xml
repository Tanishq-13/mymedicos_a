<!-- res/drawable/tab_indicator_with_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33000000" /> <!-- Semi-transparent black for shadow -->
            <corners android:radius="15dp" /> <!-- Match the corner radius of the indicator -->
        </shape>
    </item>

    <!-- Indicator layer (above shadow) -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Main color of the indicator -->
            <corners android:radius="15dp" /> <!-- Rounded corners for the indicator -->
        </shape>
    </item>
</layer-list>
