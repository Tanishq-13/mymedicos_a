<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape>
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>

    <!-- Left line -->
    <item android:right="1dp">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="1dp"
                android:color="@color/item_cat_ack"/>
        </shape>
    </item>

    <!-- Bottom line -->
    <item android:left="1dp" android:top="1dp">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="2dp"
                android:color="#000000"/>
        </shape>
    </item>

    <!-- Padding -->
    <item>
        <shape>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"/>
        </shape>
    </item>
</layer-list>
