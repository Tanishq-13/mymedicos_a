<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape (white with border and rounded corners) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Solid white background -->
            <stroke android:color="@color/unselected" android:width="1dp" /> <!-- Border stroke -->
            <corners android:radius="@dimen/_10ssp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Arrow image, aligned to the right and smaller size -->
    <item
        android:drawable="@drawable/baseline_arrow_drop_down_24"
        android:right="@dimen/_6ssp"
        android:gravity="end">

    </item>

</layer-list>
