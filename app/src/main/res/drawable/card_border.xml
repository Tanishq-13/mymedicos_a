<!-- res/drawable/cardview_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- Outer border (stroke) -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Card background color -->
            <stroke
                android:width="10dp"
                android:color="#4D4747"/> <!-- Border color and thickness -->
        </shape>
    </item>
</layer-list>
