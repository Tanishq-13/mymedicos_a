<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#171717"/> <!-- Light gray shadow color -->
            <corners android:radius="@dimen/_8sdp"/> <!-- Adjust the radius for rounded corners -->
        </shape>
    </item>

    <!-- Main background layer with border -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Background color -->
            <corners android:radius="12dp"/>
            <stroke android:width="2dp" android:color="#454343"/> <!-- Border color -->
        </shape>
    </item>
</layer-list>
