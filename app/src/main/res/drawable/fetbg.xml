<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item android:right="@dimen/_8sdp" android:left="@dimen/_8sdp" android:top="@dimen/_8sdp" android:bottom="@dimen/_8sdp">
        <shape android:shape="rectangle">
            <solid android:color="#33000000" /> <!-- Semi-transparent shadow color -->
            <corners android:radius="@dimen/_8sdp" />
        </shape>
    </item>

    <!-- Background Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Replace with your desired background color -->
            <corners android:radius="@dimen/_8sdp" />
        </shape>
    </item>

</layer-list>
