<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/backgroundcolor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.publications.activity.mainfragments.UsersPublicationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_8sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="@dimen/_5ssp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learnings"
                android:paddingEnd="@dimen/_10ssp"
                android:fontFamily="@font/inter"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                app:dividerThickness="@dimen/_2sdp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Purchased Products"
            android:fontFamily="@font/inter"
            android:layout_gravity="center"
            android:textSize="@dimen/_10ssp"
            android:textStyle="normal" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewfortop"
            android:outlineSpotShadowColor="@color/backgroundcolor"
            android:elevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/purchased"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@color/backgroundcolor"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>