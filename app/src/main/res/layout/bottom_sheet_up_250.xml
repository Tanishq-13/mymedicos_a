<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    android:background="@drawable/backgroundoftheunselected"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/purchasetitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/backgroundcolor"
        android:gravity="center"
        android:fontFamily="@font/inter_semibold"
        android:text="â‚¹129 = 200 Credit Points"
        android:textColor="@color/unselected"
        android:textSize="@dimen/_16ssp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@color/backgroundcolor"
        android:gravity="center"
        android:fontFamily="@font/inter_semibold"
        android:text="Note* : Purchased Credits can't be Withdrawn back."
        android:textColor="#707070"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:elevation="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_8ssp"
        android:id="@+id/paymentpartcredit129"
        android:background="@drawable/backgroundoftheunselected"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:padding="@dimen/_10ssp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:textStyle="bold"
        android:text="CONFIRM"
        android:fontFamily="@font/inter_semibold"
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/unselected"
        android:clickable="true"
        android:focusable="true"/>

</LinearLayout>
