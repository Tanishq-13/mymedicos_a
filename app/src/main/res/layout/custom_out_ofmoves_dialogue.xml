<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:background="@color/white"
    android:layout_margin="@dimen/_20sdp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/_8sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/correctanswer"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            android:layout_marginBottom="@dimen/_5sdp"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/asorryforcredits"
            app:lottie_speed="1" />

        <TextView
            android:id="@+id/messageforout"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:text="MESSAGE WILL COME HERE"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/unselected"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="@dimen/_12ssp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/okbtnreplacer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="GOT IT"
            android:paddingVertical="@dimen/_5sdp"
            android:background="@drawable/backgroundoftheunselected"
            android:textColor="@color/unselected"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:fontFamily="@font/inter_semibold"
            android:textAlignment="center"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/tothepackage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="@dimen/_5ssp"
            android:background="@color/unselected"
            tools:layout_editor_absoluteX="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#F7D058"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:scaleType="centerCrop"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/verifiedanime"
                        app:lottie_speed="1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="8dp"
                        android:gravity="center"
                        android:text="GET A PACKAGE"
                        android:textColor="@color/unselected"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>