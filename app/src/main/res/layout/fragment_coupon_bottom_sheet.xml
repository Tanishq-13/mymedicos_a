<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/whiteopac"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="@dimen/_8ssp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_12ssp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:src="@drawable/baseline_close_24"
                android:paddingHorizontal="@dimen/_10ssp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:textStyle="normal"
                android:textColor="@color/unselected"
                android:fontFamily="@font/inter_semibold"
                android:textSize="@dimen/_16ssp"
                android:text="Coupons"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_8ssp"
        android:paddingVertical="@dimen/_3ssp"
        android:drawablePadding="@dimen/_5ssp"
        android:layout_marginTop="@dimen/_2ssp"
        android:background="#FFF6E5"
        android:layout_gravity="center"
        android:gravity="start"
        android:textColor="@color/unselected"
        android:textStyle="normal"
        android:fontFamily="@font/inter_semibold"
        android:drawableStart="@drawable/wowo"
        android:textSize="@dimen/_12ssp"
        android:text="Wohoo! Explore the best coupons for you!"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/coupons_recycleview_available"
                android:layout_width="match_parent"
                android:padding="@dimen/_5ssp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/help_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_10ssp"
                android:textSize="@dimen/_12ssp"
                android:paddingBottom="@dimen/_5ssp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/unselected"
                android:textStyle="normal"
                android:fontFamily="@font/inter"
                android:text="Having trouble ? Click here"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
