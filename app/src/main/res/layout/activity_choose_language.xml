<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activities.home.sidedrawer.ChooseLanguageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/selectlangtoolbar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/flag_transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/selectlangtoolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="1"
                android:background="@drawable/flag_transparent"
                app:navigationIcon="@drawable/arrow_bk"
                app:subtitleTextAppearance="@color/white"
                app:subtitleTextColor="@color/white"
                app:title="Select Language"
                app:titleTextColor="@color/black">

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <RadioGroup
            android:id="@+id/languageradio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
<!--Radio button for english -->
            <RadioButton
                android:id="@+id/selectenglish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/langbk"
                android:buttonTint="@color/green"
                android:drawablePadding="10dp"
                android:elevation="5dp"
                android:fontFamily="@font/inter"
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp"
                android:text="English"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

<!--Radio button for Hindi -->
            <RadioButton
                android:id="@+id/selecthindi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/langbk"
                android:buttonTint="@color/green"
                android:elevation="5dp"
                android:fontFamily="@font/inter"
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp"
                android:text="हिंदी"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/langbk"
                android:buttonTint="@color/green"
                android:elevation="5dp"
                android:fontFamily="@font/inter"
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp"
                android:text="ಕನ್ನಡ"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />
<!--Radio button for Gujrati -->
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/langbk"
                android:buttonTint="@color/green"
                android:elevation="5dp"
                android:fontFamily="@font/inter"
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp"
                android:text="ગુજરાતી"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />
<!--Radio button for Marathi -->
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_100sdp"
                android:background="@drawable/langbk"
                android:buttonTint="@color/green"
                android:elevation="5dp"
                android:fontFamily="@font/inter"
                android:paddingHorizontal="10dp"
                android:paddingVertical="20dp"
                android:text="मराठी"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />

        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:fontFamily="@font/inter"
        android:paddingVertical="12dp"
        android:text="Select"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
