<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundcolor"
    android:padding="@dimen/_8sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical">

    <TextView
        android:id="@+id/resultQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12ssp"
        android:textColor="#848C8A"
        android:layout_marginBottom="@dimen/_5ssp"
        android:fontFamily="@font/roboto_bold"
        android:textStyle="bold"
        android:textAlignment="gravity"
        android:layout_gravity="start"
        android:gravity="start"
        android:text="Question"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/resultCorrectOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_1sdp"
            android:drawableStart="@drawable/correcticon"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:background="@drawable/categorydark"
            android:textAlignment="gravity"
            android:clickable="true"
            android:drawablePadding="@dimen/_10sdp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="Result"/>

        <TextView
            android:id="@+id/resultSelectedOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/selectedicon"
            android:layout_marginVertical="@dimen/_5ssp"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:textAlignment="gravity"
            android:clickable="true"
            android:drawablePadding="@dimen/_10sdp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="Selected"/>

        <TextView
            android:id="@+id/resultdescription"
            android:layout_width="match_parent"
            android:fontFamily="@font/inter"
            android:paddingVertical="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:text="See Details"
            android:textColor="@color/unselected"
            android:textSize="@dimen/_10sdp"
            tools:ignore="NotSibling"/>

    </LinearLayout>

</LinearLayout>