<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundcolor"
    tools:context=".activities.pg.activites.extras.CreditsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_100sdp"
        android:layout_height="wrap_content">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/shimmerforloading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp"
            android:visibility="gone"
            android:padding="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/shimmer"
            app:lottie_loop="false"
            app:lottie_speed="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingVertical="@dimen/_2sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backtothehomesideactivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_15sdp"
                android:src="@drawable/arrow_bk"
                android:layout_marginEnd="@dimen/_10sdp"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="10dp"
            android:background="@color/green"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/brlarge" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="8dp"
                    android:text="MedCoin - These Credits could be used for purchasing Premium Exam Sets, Test Cases and Preparation Sets"
                    android:textAlignment="center"
                    android:textColor="#595656"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:paddingHorizontal="20dp"
                    android:text="Health is Wealth, Care with Stealth."
                    android:textAlignment="center"
                    android:textColor="#595656"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="10dp"
            android:background="@color/green"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:paddingHorizontal="@dimen/_10ssp"
                    android:paddingVertical="@dimen/_8ssp"
                    android:text="Your Credit Score"
                    android:textColor="#595656"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="5dp"
                    android:background="@drawable/categorynewbk"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/brsmall"/>

                    <TextView
                        android:id="@+id/currentcoins"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/inter_semibold"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="50"
                        android:textAlignment="center"
                        android:paddingHorizontal="5dp"
                        android:textColor="#595656"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Redeem Credits"
                android:textColor="#B3000000"
                android:textSize="16dp"
                android:fontFamily="@font/inter_semibold"
                android:textStyle="bold"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                app:dividerColor="#D9D9D9"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/video1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="@dimen/_2ssp"
            android:clickable="true"
            android:background="@color/unselected"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroundoftheunselected"
                android:elevation="@dimen/_20sdp"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/vide1oicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/brsmall" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_semibold"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="@dimen/_5ssp"
                    android:layout_gravity="center_vertical"
                    android:text="Get 10 Credit Points"
                    android:textColor="@color/unselected"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/viewad1"
                    android:gravity="center"
                    android:elevation="@dimen/_10ssp"
                    android:text="View Advertisment"
                    android:clickable="true"
                    android:background="@drawable/backgroundoftheunselected"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="@dimen/_10ssp"
                    android:textColor="@color/unselected"
                    android:fontFamily="@font/inter_semibold"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/video2"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="@dimen/_2ssp"
            android:background="@color/unselected"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroundoftheunselected"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/brsmall"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="8dp"
                    android:layout_gravity="center_vertical"
                    android:text="Get 20 Credit Points"
                    android:textColor="@color/unselected"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/viewad2"
                    android:gravity="center"
                    android:elevation="@dimen/_10ssp"
                    android:text="View Advertisment"
                    android:clickable="true"
                    android:background="@drawable/backgroundoftheunselected"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="@dimen/_10ssp"
                    android:textColor="@color/unselected"
                    android:fontFamily="@font/inter_semibold"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medicos Package"
                android:textColor="#B3000000"
                android:textSize="16dp"
                android:fontFamily="@font/inter_semibold"
                android:textStyle="bold"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                app:dividerColor="#D9D9D9"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/puchase100credits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2ssp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="@dimen/_5ssp"
            android:background="@color/unselected"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F7D058"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:scaleType="centerCrop"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/verifiedanime"
                            app:lottie_speed="1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/brpurchase"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_semibold"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="8dp"
                                android:text="Get 99 Base Credit Points + 41 Bonus "
                                android:textColor="@color/unselected"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:elevation="@dimen/_5ssp"
                                android:paddingVertical="5dp"
                                android:background="@drawable/bkforpurchase"
                                android:layout_weight="0.5"
                                android:orientation="horizontal">

                                <!-- TextView for existing content -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/inter_semibold"
                                    android:text="Purchase"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textAlignment="center"
                                    android:paddingHorizontal="5dp"
                                    android:textColor="@color/unselected"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/puchase250credits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="@dimen/_5ssp"
            android:background="@color/unselected"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="10dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Banner -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/categorynewbk" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F7D058"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:scaleType="centerCrop"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/verifiedanime"
                            app:lottie_speed="1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/brpurchase"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_semibold"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="8dp"
                                android:text="Get 129 Base Credit Points + 71 Bonus"
                                android:textColor="@color/unselected"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:elevation="@dimen/_5ssp"
                                android:paddingVertical="5dp"
                                android:background="@drawable/bkforpurchase"
                                android:layout_weight="0.5"
                                android:orientation="horizontal">

                                <!-- TextView for existing content -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/inter_semibold"
                                    android:text="Purchase"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textAlignment="center"
                                    android:paddingHorizontal="5dp"
                                    android:textColor="@color/unselected"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/puchase500credits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="@dimen/_5ssp"
            android:background="@color/unselected"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="10dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Banner -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/categorynewbk" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F7D058"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:scaleType="centerCrop"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/verifiedanime"
                            app:lottie_speed="1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/brpurchase"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_semibold"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="8dp"
                                android:text="Get 199 Base Credit Points + 151 Bonus"
                                android:textColor="@color/unselected"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:elevation="@dimen/_5ssp"
                                android:paddingVertical="5dp"
                                android:background="@drawable/bkforpurchase"
                                android:layout_weight="0.5"
                                android:orientation="horizontal">

                                <!-- TextView for existing content -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/inter_semibold"
                                    android:text="Purchase"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textAlignment="center"
                                    android:paddingHorizontal="5dp"
                                    android:textColor="@color/unselected"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </FrameLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</androidx.core.widget.NestedScrollView>