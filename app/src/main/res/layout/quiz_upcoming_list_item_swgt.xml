<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:id="@+id/schedulefortheexam"
    android:paddingVertical="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_4ssp"
    android:orientation="vertical"
    android:background="@drawable/backgroundoftheunselected">

    <LinearLayout
        android:layout_width="wrap_content"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/attendNowTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:paddingHorizontal="@dimen/_15ssp"
            android:paddingTop="@dimen/_1ssp"
            android:paddingBottom="@dimen/_4ssp"
            android:text="Schedule Now"
            android:background="@drawable/corner_resorce"
            android:textColor="@color/teal_700"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/titleSets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_10ssp"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/unselected"
        android:text="Loading..."
        android:textSize="@dimen/_14sdp"/>
    <LinearLayout
        android:id="@+id/unlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"


        android:layout_marginHorizontal="@dimen/_9sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:paddingVertical="@dimen/_1sdp"
        android:paddingHorizontal="@dimen/_10ssp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="end"
            android:src="@drawable/unlock">

        </ImageView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"


        android:layout_marginHorizontal="@dimen/_9sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:paddingVertical="@dimen/_1sdp"
        android:paddingHorizontal="@dimen/_10ssp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="end"
            android:src="@drawable/lock_svgrepo_com">

        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingHorizontal="@dimen/_10ssp"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_1sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:paddingHorizontal="@dimen/_2sdp"
            android:text="Upcoming On :"
            android:textColor="@color/grey"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/availablefromtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:paddingHorizontal="@dimen/_5sdp"
            android:text="25 Dec 2023"
            android:textColor="@color/grey"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/availabletilltime"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:paddingHorizontal="@dimen/_5sdp"
            android:text="25 Dec 2023"
            android:textColor="@color/grey"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold" />

    </LinearLayout>



</LinearLayout>


