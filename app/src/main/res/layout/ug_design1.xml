<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dr_ug_title"
                android:layout_width="0dp"
                android:fontFamily="@font/inter"
                android:paddingStart="@dimen/_10sdp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textSize="@dimen/_16sdp"
                android:textColor="#817E7E"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dr_ug_date"
                android:layout_width="0dp"
                android:fontFamily="@font/inter"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_5ssp"
                android:textStyle="bold"
                android:gravity="end|center_vertical"
                android:paddingEnd="10dp"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/_8sdp"
                android:text="Loading..."
                android:maxLines="1"
                android:textColor="#8F8D8D"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10ssp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="@dimen/_10sdp"
                android:text="Provider"
                android:fontFamily="@font/inter"
                android:maxLines="1"
                android:textColor="#8F8D8D"/>

            <TextView
                android:id="@+id/dr_ug_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/_5ssp"
                android:textStyle="bold"
                android:gravity="start|center_vertical"
                android:paddingEnd="10dp"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/_10sdp"
                android:text="Loading..."
                android:fontFamily="@font/inter"
                android:maxLines="1"
                android:textColor="#8F8D8D"/>

        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="8dp"
            android:paddingVertical="10dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/dr_ug_desciption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5ssp"
            android:maxEms="1"
            android:fontFamily="@font/inter"
            android:maxLines="2"
            android:paddingVertical="5dp"
            android:textColor="#9A9A9A"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum"
            android:textSize="@dimen/_10sdp" />

        <LinearLayout
            android:id="@+id/dr_pdf"
            android:layout_width="match_parent"
            android:paddingVertical="10dp"
            android:background="@color/green"
            android:paddingHorizontal="8dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/inter_extrabold"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="Download Attachment"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/arrowwwwwwwnext"
                android:layout_weight="1"/>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>