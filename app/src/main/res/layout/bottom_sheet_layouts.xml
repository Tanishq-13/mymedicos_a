<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingHorizontal="@dimen/_14ssp"
        android:background="@drawable/backofpgmaterials"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/educationText"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Education"

        android:layout_marginHorizontal="@dimen/_8ssp"
        android:paddingVertical="@dimen/_8ssp"
        android:layout_below="@id/educationOption"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:id="@+id/educationOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
       />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginVertical="@dimen/_8ssp"
        android:paddingHorizontal="@dimen/_14ssp"
        android:gravity="center_vertical"
        android:background="@drawable/backofpgmaterials"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/communityText"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Community"
        android:layout_marginHorizontal="@dimen/_8ssp"
        android:paddingVertical="@dimen/_8ssp"

        android:layout_alignParentStart="true"
      />

    <RadioButton
        android:id="@+id/communityOption"
        android:layout_width="wrap_content"


        android:paddingVertical="@dimen/_8ssp"
        android:layout_height="wrap_content"


 />
    </LinearLayout>

</LinearLayout>
