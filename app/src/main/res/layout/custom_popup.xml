<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:elevation="@dimen/_5sdp"
    android:background="@color/backgroundcolor"
    android:layout_margin="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/backgroundcolor"
        android:padding="@dimen/_5sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Happy Learning!"
            android:textColor="@color/unselected"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:fontFamily="@font/inter"
            android:textAlignment="center"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/checkmarkanimation"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/creadited"
            app:lottie_speed="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yahoo!, 150 points Credited"
            android:textColor="@color/unselected"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:fontFamily="@font/inter"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You have received 150 med coins creadited in your wallet."
            android:textColor="@color/unselected"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:fontFamily="@font/inter"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/closebtnforthecreditmessage99"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:text="Got it"
            android:paddingVertical="@dimen/_5sdp"
            android:background="@drawable/categoryblackkkkkk"
            android:textColor="@color/unselected"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:fontFamily="@font/inter"
            android:textAlignment="center"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>