<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/m"
    app:cardCornerRadius="@dimen/_10sdp">

    <LinearLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:paddingVertical="@dimen/_4ssp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_10ssp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/applicantname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/montserrat_medium"
                android:text="Person Name"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/age_of_applicant"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_15ssp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="end"
                android:text="21"
                android:textColor="#616161"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phone_of_applicant"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:paddingHorizontal="@dimen/_8ssp"
                android:paddingVertical="@dimen/_2ssp"
                android:text="Email of Applicant"
                android:textColor="#A39E9E"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/modeiscoming"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:paddingHorizontal="@dimen/_8ssp"
                android:paddingVertical="@dimen/_2ssp"
                android:text="Phonenumber of Applicant"
                android:textColor="#A39E9E"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/cover_letter_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:paddingHorizontal="@dimen/_8ssp"
            android:paddingVertical="@dimen/_2ssp"
            android:text="Cover Letter of Applicant"
            android:textColor="#A39E9E"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DownloadResume"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_8ssp"
            android:paddingHorizontal="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_5ssp"
            android:textStyle="bold"
            android:paddingVertical="@dimen/_5ssp"
            android:gravity="center"
            android:textSize="@dimen/_10ssp"
            android:clickable="true"
            android:text="Download Attachment"
            android:background="@drawable/bkofcme"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#FFFFFF"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>