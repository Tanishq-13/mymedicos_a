<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_2sdp"
        android:orientation="vertical"
        android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_8sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/questionspan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_semibold"
                    android:textStyle="normal"
                    android:textAlignment="gravity"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:text="Updating.."/>

                <ImageView
                    android:id="@+id/ifthequestionhavethumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="@dimen/_200sdp"
                    android:maxWidth="@dimen/_200sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:adjustViewBounds="true"
                    android:visibility="gone"
                    android:scaleType="fitCenter"
                    android:src="@drawable/placeholder"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_1sdp"
                        android:layout_marginVertical="@dimen/_4sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_4sdp"
                        app:cardBackgroundColor="@android:color/white">

                        <TextView
                            android:id="@+id/optionA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/optiona"
                            android:textSize="@dimen/_12ssp"
                            android:paddingVertical="@dimen/_8ssp"
                            android:paddingHorizontal="@dimen/_40sdp"
                            android:textColor="@color/black"
                            android:textAlignment="gravity"
                            android:fontFamily="@font/inter_semibold"
                            android:clickable="true"
                            android:drawablePadding="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:text="Option A"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_1sdp"
                        android:layout_marginVertical="@dimen/_4sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_4sdp"
                        app:cardBackgroundColor="@android:color/white">
                    <TextView
                        android:id="@+id/optionB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/optionb"
                        android:textSize="@dimen/_12ssp"
                        android:paddingVertical="@dimen/_8ssp"
                        android:paddingHorizontal="@dimen/_40sdp"
                        android:textColor="@color/black"
                        android:textAlignment="gravity"
                        android:fontFamily="@font/inter_semibold"
                        android:clickable="true"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:text="Option B"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_1sdp"
                        android:layout_marginVertical="@dimen/_4sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_4sdp"
                        app:cardBackgroundColor="@android:color/white">
                    <TextView
                        android:id="@+id/optionC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/optionc"
                        android:textSize="@dimen/_12ssp"
                        android:paddingVertical="@dimen/_8ssp"
                        android:paddingHorizontal="@dimen/_40sdp"
                        android:textColor="@color/black"
                        android:textAlignment="gravity"
                        android:fontFamily="@font/inter_semibold"
                        android:clickable="true"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:text="Option C"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_1sdp"
                        android:layout_marginVertical="@dimen/_4sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_4sdp"
                        app:cardBackgroundColor="@android:color/white">
                    <TextView
                        android:id="@+id/optionD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/optiond"
                        android:textSize="@dimen/_12ssp"
                        android:paddingVertical="@dimen/_8ssp"
                        android:paddingHorizontal="@dimen/_40sdp"
                        android:textColor="@color/black"
                        android:textAlignment="gravity"
                        android:fontFamily="@font/inter_semibold"
                        android:clickable="true"
                        android:drawablePadding="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:text="Option D"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/viewsummaryoption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:paddingTop="10dp"
                        android:text="View Solution"
                        android:textColor="@color/blue"
                        android:textAlignment="center"
                        android:drawableTop="@drawable/upp"/>

                </LinearLayout>

            </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:id="@+id/heading_desc"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/black"
            android:visibility="invisible"

            android:padding="@dimen/_12sdp"
            android:fontFamily="@font/inter_extrabold"
            >
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_12sdp"
            android:id="@+id/description"
            android:visibility="invisible"
            android:text="Desciption"
            android:fontFamily="@font/inter_semibold"
            android:textSize="@dimen/_12sdp"
            android:paddingVertical="@dimen/_8sdp">

        </TextView>




    </LinearLayout>

</ScrollView>
