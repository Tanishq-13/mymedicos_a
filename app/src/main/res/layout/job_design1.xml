<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Apply"
    android:elevation="@dimen/_10sdp"
    android:layout_margin="@dimen/_5sdp"
    android:layout_width="280dp"
    android:background="@drawable/backgroundoftheunselected"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/_8ssp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/job_pos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/unselected"
            android:layout_weight="1"
            android:fontFamily="@font/inter_semibold"
            android:text="Enter Position here"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/job_date"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_15ssp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:fontFamily="@font/inter"
            android:text="01-Sept-2023"
            android:textColor="@color/unselected"
            android:textSize="@dimen/_8ssp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/hosp_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:paddingHorizontal="@dimen/_8ssp"
        android:paddingVertical="@dimen/_2ssp"
        android:text="Hospital Name"
        android:textColor="#A39E9E"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_5ssp"
            android:paddingHorizontal="@dimen/_8ssp"
            android:background="@drawable/backgroundoftheunselected"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/job_loc"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:fontFamily="@font/inter"
                android:text="Enter the state here"
                android:textColor="@color/unselected"
                android:textSize="@dimen/_9ssp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/Category"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingVertical="@dimen/_1sdp"
                android:fontFamily="@font/inter"
                android:layout_weight="1"
                android:background="@drawable/back1"
                android:gravity="center"
                android:text="Loccum"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_11sdp" />

        </LinearLayout>

</LinearLayout>