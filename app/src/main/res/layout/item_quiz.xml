<!-- res/layout/item_index.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"


    android:layout_height="wrap_content"
    android:clickable="true"
    android:id="@+id/payfortheexam"
    android:layout_marginBottom="@dimen/_4ssp"
    android:orientation="vertical"
    android:background="@drawable/backgroundoftheunselected">

    <LinearLayout
        android:layout_width="wrap_content"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/attendNowTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:paddingHorizontal="@dimen/_15ssp"
            android:paddingTop="@dimen/_1ssp"
            android:paddingBottom="@dimen/_4ssp"
            android:text="Attend Now"
            android:background="@drawable/corner_resorce"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_10ssp"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/unselected"
        android:text="Loading..."
        android:textSize="@dimen/_14sdp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_10ssp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_10ssp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dateTextView"
                android:fontFamily="@font/inter"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/unselected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02nd Aug 2024 " />

            <TextView
                android:id="@+id/questionsTextView"
                android:fontFamily="@font/inter"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/unselected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="| 200 questions" />

            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/inter"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/unselected"
                android:layout_height="wrap_content"
                android:text=" | " />

            <TextView
                android:id="@+id/durationTextView"
                android:layout_width="wrap_content"
                android:textSize="@dimen/_8ssp"
                android:layout_height="wrap_content"
                android:textColor="@color/unselected"
                android:text="200 mins" />
            <LinearLayout
                android:id="@+id/unlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"


                android:layout_marginHorizontal="@dimen/_9sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:paddingVertical="@dimen/_1sdp"
                android:paddingHorizontal="@dimen/_10ssp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="end"
                    android:src="@drawable/unlock">

                </ImageView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"


                android:layout_marginHorizontal="@dimen/_9sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:paddingVertical="@dimen/_1sdp"
                android:paddingHorizontal="@dimen/_10ssp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="end"
                    android:src="@drawable/lock_svgrepo_com">

                </ImageView>
            </LinearLayout>


        </LinearLayout>




    </LinearLayout>
    <TextView
        android:id="@+id/categoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basics of Anatomy"
        android:fontFamily="@font/inter"
        android:textSize="@dimen/_10ssp"
        android:paddingHorizontal="@dimen/_10ssp"
        android:paddingVertical="@dimen/_4ssp"
        android:background="@drawable/category_background"
        android:textColor="@android:color/white"
        android:layout_gravity="end" />

</LinearLayout>
