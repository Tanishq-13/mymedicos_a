<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_4sdp"
    android:orientation="vertical"
    android:padding="16dp"
    android:foreground="@drawable/cardviewbcg"
    app:cardCornerRadius="@dimen/_4sdp"
    app:cardElevation="4dp">
    <FrameLayout
        android:background="#FBFBFB"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <!-- Live Tag with red dot -->
        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:layout_marginStart="8sp"
            android:orientation="horizontal">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/red_dott" />

            <TextView
                android:id="@+id/tv_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="LIVE"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Lock Icon -->

        <!-- Title -->

        <ImageView
            android:id="@+id/iv_lock"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="#FBFBFB"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="91dp"
            android:src="@drawable/ic_lock" />

        <TextView
            android:id="@+id/pgneet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:fontFamily="@font/inter_semibold"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="6sp"
            android:background="#FBFBFB"
            android:src="@drawable/ic_lock"
            android:text="  PGNeet  " />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout4"
            android:layout_marginLeft="8sp"
            android:layout_marginTop="1dp"
            android:text="Forensic Science Set - 01"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- 200 MCC's Text -->

        <!-- Timer Icon and Duration Text -->

        <!-- Solve Now Button -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTextView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3sp"
            android:layout_marginBottom="8sp"
            android:layout_marginEnd="2sp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="13dp"
                android:layout_height="26dp"
                android:layout_alignTop="@+id/layout_duration"
                android:layout_alignBottom="@+id/layout_duration"
                android:layout_gravity="center"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:src="@drawable/ic_play">

            </ImageView>


            <TextView
                android:id="@+id/tv_mcc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView2"
                android:layout_alignBottom="@+id/imageView2"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="-5dp"
                android:layout_toEndOf="@+id/imageView2"
                android:text="200 MCQ's"
                android:textColor="#747272" />

            <LinearLayout
                android:id="@+id/layout_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_55ssp"
                android:layout_marginTop="0sp"
                android:layout_marginEnd="4sp"
                android:layout_marginRight="0sp"
                android:layout_marginBottom="0sp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_timer" />

                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4sp"
                    android:layout_marginEnd="4sp"
                    android:text="210 mins"
                    android:textColor="#747272"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/payfortheexam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_bcg"
                    android:fontFamily="@font/lato_bold"
                    android:minWidth="85sp"
                    android:minHeight="30sp"
                    android:padding="0sp"
                    android:text="Solve Now"
                    android:textSize="13sp" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
