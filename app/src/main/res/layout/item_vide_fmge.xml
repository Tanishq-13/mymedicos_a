<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/borderforfmgeqb"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="@dimen/_5ssp"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/thumbnailvideo"
                android:layout_width="wrap_content"
                android:scaleType="center"
                android:foreground="@drawable/lightopacityviewcardforvideosection"
                android:layout_height="150dp"
                android:src="@drawable/placeholder"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/categorywhite"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Videobtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/player_fmge_video_icon"/>

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="end"
            android:paddingVertical="@dimen/_8ssp"
            android:clickable="true"
            android:onClick="onReadMoreClick"
            android:background="@drawable/borderfordownloadfmge"
            android:paddingHorizontal="@dimen/_10ssp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/videoslabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dermatology"
                android:layout_gravity="center"
                android:gravity="start"
                android:textColor="#000000"
                android:textSize="@dimen/_14ssp"
                android:textStyle="normal"
                android:textAlignment="gravity"
                android:fontFamily="@font/inter"/>

            <TextView
                android:id="@+id/timeofvideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="21/10/2023"
                android:textColor="#958A8A"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textAlignment="gravity"
                android:fontFamily="@font/inter"/>


        </LinearLayout>

</LinearLayout>