<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundcolor"
    tools:context=".activities.login.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/backgroundcolor">

            <ImageView
                android:id="@+id/toolbar_back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_bk"
                android:layout_gravity="start"
                android:padding="@dimen/_10ssp"
              />

            <ImageView
                android:id="@+id/toolbar_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5ssp"
                android:src="@drawable/baseline_contact_support_24"
                android:layout_gravity="end"
                android:padding="@dimen/_10ssp"
               />

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_30ssp"
                android:layout_margin="@dimen/_5ssp"
                android:layout_height="@dimen/_30ssp"
                android:src="@drawable/logofortheleaf"
               />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/unselected"
                android:fontFamily="@font/inter_extrabold"
                android:text="mymedicos" />

        </LinearLayout>

        <TextView
            android:id="@+id/textidforquote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_20ssp"
            android:textSize="@dimen/_12sdp"
            android:paddingBottom="@dimen/_5ssp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="@dimen/_14ssp"
            android:textColor="@color/unselected"
            android:fontFamily="@font/inter"
            android:text="Bharatâ€™s first premier medical community app, connecting healthcare experts seamlessly" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingEnd="@dimen/_5ssp"
                android:textColor="#B3B3B3"
                android:fontFamily="@font/inter"
                android:text="MADE IN BHARAT" />

            <ImageView
                android:layout_width="@dimen/_15ssp"
                android:layout_height="@dimen/_15ssp"
                android:src="@drawable/heart_icon"

                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_14ssp"
            android:textSize="@dimen/_12sdp"
            android:paddingStart="@dimen/_10ssp"
            android:textColor="@color/unselected"
            android:textStyle="bold"
            android:fontFamily="@font/inter"
            android:text="Signup or Login" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginHorizontal="@dimen/_10ssp"
            android:layout_marginTop="20dp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:background="@drawable/background_specific_for_number"
            android:id="@+id/phonenumberll"
            android:gravity="center_vertical">

            <com.hbb20.CountryCodePicker
                android:id="@+id/countryCodePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:ccp_defaultNameCode="IN"
                app:ccp_showFlag="true"
                app:ccp_showPhoneCode="true"
                app:ccp_textSize="@dimen/_12ssp"

                android:padding="@dimen/_4ssp"
                android:layout_marginLeft="@dimen/_10ssp"

            />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="match_parent"
                android:src="@drawable/line_vertical"

                />

            <EditText
                android:id="@+id/phonenumberedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your phone number"
                android:padding="@dimen/_4ssp"
                android:textStyle="bold"
                android:inputType="number"
                android:textColor="@color/unselected"
                android:textSize="@dimen/_12ssp"
                android:maxLength="10"
                android:fontFamily="@font/inter"
                android:background="@drawable/background_white_for_the_phone" />

        </LinearLayout>

        <TextView
            android:id="@+id/lgn_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btnforlogin"
            android:paddingVertical="@dimen/_10ssp"
            android:text="Continue"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_10ssp"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_15ssp"
            android:paddingVertical="@dimen/_5sdp"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/unselected"
            android:fontFamily="@font/inter"
            android:text="By Clicking, I accept the terms of service and privacy policy" />

    </LinearLayout>

</ScrollView>
