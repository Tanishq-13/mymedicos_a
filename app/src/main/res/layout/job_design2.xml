<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_10ssp"
    android:layout_height="wrap_content"
    android:elevation="@dimen/_1ssp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="@dimen/_5sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:padding="@dimen/_2ssp"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholderjobouter"/>

            <LinearLayout
                android:layout_width="0dp"
                android:background="@color/white"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_5ssp"
                    android:paddingHorizontal="@dimen/_5ssp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/job_pos1"
                        android:maxLines="1"
                        android:maxEms="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="@font/inter"
                        android:text="Enter Position here"
                        android:textSize="@dimen/_14ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/date1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter"
                        android:layout_gravity="center_vertical"
                        android:gravity="end|center_vertical"
                        android:text="01-Sept-2023"
                        android:textColor="#616161"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/hosp_name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/_5ssp"
                    android:fontFamily="@font/inter"
                    android:text="Hospital Name"
                    android:textColor="#424141"
                    android:paddingHorizontal="@dimen/_5ssp"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/_5ssp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_5ssp"
                android:paddingHorizontal="@dimen/_10ssp"
                android:background="@drawable/bkforthejobscat"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/job_loc1"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="Enter the state here"
                    android:textColor="#4A4949"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/categoryshow"
                    android:layout_width="0dp"
                    android:text="Loccum"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/inter"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/jobbackground" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>
