<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backgroundcolor"
    android:layout_height="match_parent"
    tools:context=".activities.job.PostJobActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.134">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/arrow_bk"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:padding="4dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="26dp"
            android:paddingRight="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_extrabold"
                    android:gravity="center"
                    android:text="Apply for the Opening"
                    android:textColor="@color/unselected"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:text="Please fill the following details!"
                    android:textColor="@color/unselected"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/circularbordersolid"
                android:padding="18dp">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cartbknew"
                    android:fontFamily="@font/inter"
                    android:hint="Name"
                    android:backgroundTint="@color/white"
                    android:inputType="text"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/circularbordersolid"
                android:gravity="center"
                android:padding="18dp">

                <EditText
                    android:id="@+id/Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"

                    android:fontFamily="@font/inter"
                    android:hint="Enter Your Age"
                    android:inputType="number"

                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/circularbordersolid"
                android:gravity="center"
                android:padding="18dp">

                <EditText
                    android:id="@+id/Age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/inter"
                    android:hint="Enter Your Age"
                    android:inputType="text"
                    android:textSize="14sp" />

            </LinearLayout>

            <Spinner
                android:id="@+id/genderapplicant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/circularbordersolid"
                android:padding="@dimen/_10ssp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circularbordersolid"
                    android:gravity="center"
                    android:padding="18dp">

                    <EditText
                        android:id="@+id/cover"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="top"
                        android:minHeight="@dimen/_90sdp"
                        android:fontFamily="@font/inter"
                        android:hint="Enter a Cover Letter (Hi John, This is...)"
                        android:maxLength="2000"
                        android:inputType="textMultiLine"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/char_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="0/2000"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textStyle="bold"
                    android:shadowColor="@color/green"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#AEAAAA"
                    android:text="0 - 1 years"/>

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textStyle="bold"
                    android:shadowColor="@color/green"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#AEAAAA"
                    android:text="1 - 3 years"/>

                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textStyle="bold"
                    android:shadowColor="@color/green"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#AEAAAA"
                    android:text="3+ years"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/circularbordersolid"
                android:gravity="center"
                android:padding="18dp">

                <EditText
                    android:id="@+id/experienced"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/inter"
                    android:hint="Enter your Experience &amp; Skills."
                    android:inputType="text"
                    android:textSize="14sp" />

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginVertical="@dimen/_12sdp"
                    android:layout_height="match_parent"
                    android:background="@drawable/circularbordersolid"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/addPdfjobs"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="@dimen/_5ssp"
                        android:textStyle="bold"
                        android:paddingVertical="@dimen/_10ssp"
                        android:maxLines="1"
                        android:gravity="center"
                        android:textSize="@dimen/_12ssp"
                        android:text="Select Resume"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="#BAB2B2"/>

                    <TextView
                        android:id="@+id/uploadpdfbtnjobs"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="@dimen/_10ssp"
                        android:textStyle="bold"
                        android:paddingVertical="@dimen/_10ssp"
                        android:gravity="center"
                        android:textSize="@dimen/_12ssp"
                        android:text="Upload"
                        android:background="@drawable/categoryblack"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="#FFFFFF"/>

                </LinearLayout>

            <TextView
                android:id="@+id/phonenumbertextll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:fontFamily="@font/inter"
                android:text="Remember, you can only apply for this Job Once, Terms &amp; Conditions Applied."
                android:textAlignment="center"
                android:textSize="12sp" />

            <Button
                android:id="@+id/post_btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/categorydark"
                android:fontFamily="@font/inter"
                android:padding="16dp"
                android:text="Apply"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/link_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:text="Facing any Issue ? "
                    android:textColor="#3c4b5d"
                    android:textSize="16dip" />

                <TextView
                    android:id="@+id/connectwithus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:text=" Connect Us"
                    android:textColor="@color/blue"
                    android:textSize="16dip" />

            </LinearLayout>

        </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
