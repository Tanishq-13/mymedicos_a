<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="top"
    android:background="@color/backgroundcolor"
    android:layout_height="match_parent"
    tools:context=".activities.login.EnterOtp">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingVertical="@dimen/_20sdp"
        android:paddingHorizontal="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/backbtnotp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/arrow_bk"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:padding="4dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/inter"
            android:text="Verify OTP"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:fontFamily="@font/inter"
                android:text="Enter the 6 digit OTP sent to "
                android:textSize="@dimen/_12ssp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/unselected"
                android:textSize="@dimen/_12ssp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/background_specific_for_number"
                android:gravity="center"
                android:id="@+id/inputotp1"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor"/>

            <EditText
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/background_specific_for_number"
                android:gravity="center"
                android:id="@+id/inputotp2"
                android:inputType="number"
                android:maxLength="1"
                android:imeOptions="actionPrevious"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor"/>

            <EditText
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/background_specific_for_number"
                android:gravity="center"
                android:id="@+id/inputotp3"
                android:inputType="number"
                android:maxLength="1"
                android:imeOptions="actionPrevious"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor"/>

            <EditText
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/background_specific_for_number"
                android:gravity="center"
                android:id="@+id/inputotp4"
                android:inputType="number"
                android:maxLength="1"
                android:imeOptions="actionPrevious"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor"/>

            <EditText
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/background_specific_for_number"
                android:gravity="center"
                android:id="@+id/inputotp5"
                android:inputType="number"
                android:maxLength="1"
                android:imeOptions="actionPrevious"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor"/>

            <EditText
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/background_specific_for_number"
                android:gravity="center"
                android:id="@+id/inputotp6"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/black"
                android:imeOptions="actionPrevious"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:ignore="LabelFor"/>

        </LinearLayout>

        <TextView
            android:id="@+id/countdown_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:paddingVertical="@dimen/_10ssp"
            android:textSize="@dimen/_10ssp"
            android:layout_marginStart="@dimen/_8sdp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_10ssp"
            android:paddingVertical="@dimen/_8ssp"
            android:gravity="start">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:paddingEnd="@dimen/_5ssp"
                android:text="Did'nt receive the OTP ?"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contextClickable="true"
                android:fontFamily="@font/inter_semibold"
                android:textStyle="bold"
                android:textColor="@color/unselected"
                android:clickable="true"
                android:text="Resend Via"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingVertical="@dimen/_10ssp"
            android:layout_marginHorizontal="@dimen/_5ssp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/resend_otp"
                android:layout_width="0dp"
                android:paddingVertical="@dimen/_5ssp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/border_bk_for_message"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_15ssp"
                    android:layout_height="@dimen/_15ssp"
                    android:layout_marginEnd="@dimen/_5ssp"
                    android:layout_gravity="center"
                    android:src="@drawable/send_sms"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/unselected"
                    android:paddingVertical="@dimen/_5ssp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/inter_semibold"
                    android:text="SMS"
                    android:textSize="@dimen/_10ssp"
                    android:textStyle="normal" />

            </LinearLayout>



        </LinearLayout>


        <TextView
            android:id="@+id/submit_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btnforlogin"
            android:paddingVertical="@dimen/_10ssp"
            android:text="Continue"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_5ssp"
            android:textColor="@color/white"
            android:layout_marginVertical="@dimen/_10sdp"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/help_support1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_5ssp"
            android:textSize="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_10ssp"
            android:paddingBottom="@dimen/_5ssp"
            android:layout_gravity="center"
            android:gravity="center"
            android:clickable="true"
            android:textColor="@color/unselected"
            android:focusable="true"
            android:focusableInTouchMode="true"

            android:textStyle="normal"
            android:fontFamily="@font/inter"
            android:text="Having trouble ? React us on support@mymedicos.in"/>

        <ProgressBar
            android:id="@+id/otpprogressbar"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </LinearLayout>

</ScrollView>