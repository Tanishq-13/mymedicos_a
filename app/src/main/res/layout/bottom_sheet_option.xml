<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/newbkfortheoption"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/unselected"
        android:fontFamily="@font/inter_extrabold"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:text="Correct Option"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:background="@drawable/bkforthecorrectoptioninpg"
        android:paddingVertical="15dp"
        android:paddingHorizontal="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp"
            android:src="@drawable/correctforoption"/>

        <TextView
            android:id="@+id/tvCorrectOption"
            android:layout_width="wrap_content"
            android:fontFamily="@font/inter"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Correct Option: " />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/unselected"
        android:fontFamily="@font/inter_extrabold"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:text="Option Selected"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:background="@drawable/optionuselected"
        android:paddingVertical="15dp"
        android:paddingHorizontal="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp"
            android:src="@drawable/selectforoption"/>

        <TextView
            android:id="@+id/tvSelectedOption"
            android:layout_width="wrap_content"
            android:fontFamily="@font/inter"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:text="Your Selected Option: " />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/unselected"
        android:fontFamily="@font/inter_extrabold"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:text="Detailed Summary"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:textColor="@color/unselected"
        android:fontFamily="@font/inter"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:layout_height="wrap_content"
        android:text="Description: " />

</LinearLayout>
