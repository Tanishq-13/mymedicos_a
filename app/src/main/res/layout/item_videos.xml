<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:backgroundTint="@color/white"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="end"
            android:paddingVertical="@dimen/_8ssp"
            android:clickable="true"
            android:onClick="onReadMoreClick"
            android:background="#E2F9F8"
            android:paddingHorizontal="@dimen/_10ssp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/videoslabel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Dermatology"
                android:layout_gravity="center"
                android:gravity="start"
                android:textColor="#000000"
                android:layout_marginEnd="@dimen/_10ssp"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:textAlignment="gravity"
                android:fontFamily="@font/roboto_bold"/>

            <TextView
                android:id="@+id/timeofvideo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="21/10/2023"
                android:textColor="#958A8A"
                android:layout_marginEnd="@dimen/_5ssp"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"
                android:gravity="end"
                android:layout_gravity="center"
                android:textAlignment="gravity"
                android:fontFamily="@font/roboto_bold"/>


        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/thumbnailvideo"
                android:layout_width="wrap_content"
                android:scaleType="centerCrop"
                android:foreground="@drawable/lightopacityviewcardforvideosection"
                android:layout_height="150dp"
                android:src="@drawable/placeholder"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:paddingHorizontal="@dimen/_8ssp"
                android:paddingVertical="@dimen/_2ssp"
                android:background="@drawable/categorynewbk"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play"
                    android:layout_gravity="center"
                    android:textColor="#000000"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/_5ssp"
                    android:textAlignment="gravity"
                    android:fontFamily="@font/roboto_bold"/>

                <ImageView
                    android:id="@+id/Videobtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/video"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>